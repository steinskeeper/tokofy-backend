generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  user_id  Int      @id @default(autoincrement())
  role     String
  name     String
  username String @unique
  desc     String?
  category String?
  location String
  picture  String?
  banner   String?
  password String
  Items    Items[]
  Orders   Orders[]
}

model Items {
  id        Int      @id @default(autoincrement())
  name      String
  quantity  Int
  desc      String
  price     Int
  image     String?
  user      Users    @relation(fields: [user_id], references: [user_id])
  user_id   Int
  Orders    Orders[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Orders {
  id        Int      @id @default(autoincrement())
  user      Users    @relation(fields: [user_id], references: [user_id])
  user_id   Int
  status    String
  item      Items    @relation(fields: [item_id], references: [id])
  item_id   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}
